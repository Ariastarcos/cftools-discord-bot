{
  "name": "@repo/ui",
  "version": "1.1.0",
  "private": true,
  "license": "MIT",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "tsup src/index.tsx --format esm,cjs --dts --external react",
    "clean": "rimraf dist",
    "dev": "tsup src/index.tsx --format esm,cjs --watch --dts --external react --watch --onSuccess \"node dist/index.js\"",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/ --max-warnings 0",
    "lint:fix": "eslint src/ --fix",
    "test": "jest"
  },
  "jest": {
    "preset": "@repo/jest-presets/jest/browser"
  },
  "devDependencies": {
    "@types/jest": "^29.5.10",
    "@types/node": "^20.9.4",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "@repo/eslint-config": "workspace:*",
    "@repo/jest-presets": "workspace:^",
    "@repo/typescript-config": "workspace:*",
    "react": "^18.2.0",
    "eslint": "^8.54.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
